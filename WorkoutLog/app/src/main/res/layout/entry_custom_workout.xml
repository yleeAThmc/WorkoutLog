<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".EntryActivity"
    android:id="@+id/entry_view">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/layout_margin"
        android:background="@drawable/edittext_green_bg"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#00000000"
            android:textSize="@dimen/entry_font_size"
            android:id="@+id/custom_name"
            android:hint="@string/name_prompt"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/edittext_green_bg"
            android:id="@+id/custom_dist_bg">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_remove"
                android:layout_gravity="right|top"
                android:id="@+id/custom_dist_btn"
                android:onClick="onCSTDistBtnClicked"/>
            <EditText
            android:id="@+id/custom_dist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:inputType="number"
            android:hint="@string/dist_prompt"/>
            <ImageButton
                android:id="@+id/miBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:background="@drawable/cream_mi"
                android:onClick="onClickMi"/>
            <ImageButton
                android:id="@+id/mBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/cream_m"
                android:onClick="onClickM"/>
            <ImageButton
                android:id="@+id/kmBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="@drawable/cream_km"
                android:onClick="onClickKm"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/edittext_green_bg"
            android:id="@+id/custom_dur_bg">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_remove"
                android:layout_gravity="right|top"
                android:id="@+id/custom_dur_btn"
                android:onClick="onCSTDurBtnClicked"/>
            <EditText
                android:id="@+id/custom_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="center_vertical|start"
                android:inputType="number"
                android:hint="@string/hh"/>
            <EditText
                android:id="@+id/custom_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="center"
                android:inputType="number"
                android:hint="@string/mm"/>
            <EditText
                android:id="@+id/custom_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="center_vertical|end"
                android:inputType="number"
                android:hint="@string/ss"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/edittext_green_bg"
            android:id="@+id/custom_wgt_bg">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_remove"
                android:layout_gravity="right|top"
                android:id="@+id/custom_wgt_btn"
                android:onClick="onCSTWgtBtnClicked"/>
            <EditText
                android:id="@+id/custom_wgt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                android:inputType="number"
                android:hint="@string/wgt_prompt"/>
            <ImageButton
                android:id="@+id/lbBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:background="@drawable/cream_lb"
                android:onClick="onClickLb"/>
            <ImageButton
                android:id="@+id/kgBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="@drawable/cream_kg"
                android:onClick="onClickKg"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/edittext_green_bg"
            android:id="@+id/custom_setrep_bg">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_remove"
                android:layout_gravity="right|top"
                android:id="@+id/custom_setrep_btn"
                android:onClick="onCSTSetrepBtnClicked"/>
            <EditText
                android:id="@+id/custom_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="center_vertical|start"
                android:inputType="number"
                android:hint="@string/set"/>

            <EditText
                android:id="@+id/custom_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="center_vertical|end"
                android:inputType="number"
                android:hint="@string/rep"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cream_bg"
            android:layout_margin="@dimen/btn_margin"
            android:text="@string/back"
            android:onClick="getCommonDataView"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green_bg"
            android:layout_margin="@dimen/btn_margin"
            android:text="@string/save"
            android:onClick="onCustomSubmit"/>
    </LinearLayout>

</LinearLayout>
