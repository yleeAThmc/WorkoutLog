<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".EntryActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:background="@drawable/edittext_green_bg"
        android:layout_margin="@dimen/layout_margin"
        >
        <AutoCompleteTextView
            android:id="@+id/cardio_actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/entry_font_size"
            android:background="#00000000"
            android:hint="@string/name_prompt"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/cardio_dist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/edittext_green_bg"
            android:inputType="number"
            android:hint="@string/dist_prompt"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/edittext_green_bg">
                <EditText
                    android:id="@+id/cardio_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:inputType="number"
                    android:hint="hh"/>
                <EditText
                    android:id="@+id/cardio_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:inputType="number"
                    android:hint="mm"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cream_bg"
            android:layout_margin="@dimen/btn_margin"
            android:text="Back"
            android:onClick="getCommonDataView"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green_bg"
            android:layout_margin="@dimen/btn_margin"
            android:text="Save"
            android:onClick="onCardioSubmit"/>
    </LinearLayout>

</LinearLayout>
