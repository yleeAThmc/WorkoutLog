<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/category_btn_margin_size"
        android:orientation="vertical">
        <Button
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_margin="@dimen/category_btn_margin_size"
            android:background="@drawable/btn_green_border"
            android:textSize="@dimen/category_btn_font_size"
            android:text="Weights"
            android:onClick="getWeightStrengthView"/>
        <Button
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_margin="@dimen/category_btn_margin_size"
            android:textSize="@dimen/category_btn_font_size"
            android:background="@drawable/btn_green_border"
            android:text="Body weight"
            android:onClick="getBodyStrengthView"/>
        <Button
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_margin="@dimen/category_btn_margin_size"
            android:textSize="@dimen/category_btn_font_size"
            android:background="@drawable/btn_cream_border"
            android:text="Back"
            android:onClick="getInitialChoiceView"/>
    </LinearLayout>
</FrameLayout>