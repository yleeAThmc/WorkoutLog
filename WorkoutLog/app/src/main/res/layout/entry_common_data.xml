<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_margin="@dimen/layout_margin"
        android:background="@drawable/edittext_cream_bg">
        <DatePicker
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"/>

        <TimePicker
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/layout_margin"
        android:background="@drawable/bar">
        <SeekBar
            android:id="@+id/mood"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/layout_margin"

            android:minHeight="30dp"
            android:maxHeight="30dp"
            android:max="4"
            android:progress="2"/>
    </FrameLayout>


    <EditText
        android:id="@+id/memo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_margin="@dimen/layout_margin"
        android:background="@drawable/edittext_green_bg"
        android:hint="Additional memo "
        android:lines="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/btn_cream_bg"
            android:layout_margin="@dimen/btn_margin"
            android:text="Back"
            android:onClick="goBackFromCommon"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green_bg"
            android:layout_margin="@dimen/btn_margin"
            android:text="Continue"
            android:onClick="continueFromCommon"/>
    </LinearLayout>
</LinearLayout>